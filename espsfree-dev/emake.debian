#! /bin/sh
# VERSION 1.0
#BUILDSPS=~/build/esps
BUILDSPS=/usr/
# NOTE: The LDEMULATION and CROSSFLAGS are needed to compile 32-bit code on
# AMD64 Linux and are not necessary when not cross-compiling.
CROSSFLAGS="-m32 -L/lib32 -L/usr/lib32"
exec make \
LDEMULATION=elf_i386 \
LOCALBINDIR=/usr/bin \
SPSDIR=$BUILDSPS \
BINDIR=/usr/bin \
MANDIR=/usr/share/man \
LIBDIR=/usr/lib/espsfree \
PARAMDIR=/usr/lib/espsfree/params \
WAVESDIR=/usr/lib/espsfree \
PROGMOD=0755 \
MANMOD=0644 \
OLDBIN=$BUILDSPS/bin/old \
SPSLIB="/usr/lib/espsfree/libhdre.a /usr/lib/espsfree/libespsg.a" \
WSPSLIB="/usr/lib/espsfree/libhdrw.a /usr/lib/espsfree/libespsg.a" \
NSPSLIB="/usr/lib/espsfree/libhdrn.a /usr/lib/espsfree/libespsg.a" \
SSPSLIB="/usr/lib/espsfree/libhdrs.a /usr/lib/espsfree/libespsg.a" \
PROGCFLAGS=" $CROSSFLAGS -DLINUX_OR_MAC -DSCCS -DNO_LIC -I$BUILDSPS/include -DLINUX " \
LINT="" \
LINTFLAGS="-DLINUX_OR_MAC -I$BUILDSPS/include -DLINUX" \
STRIP="strip" \
LINK="ln -s" \
SINC=/usr/include/espsfree \
LINTLIB=/usr/lib/espsfree/llib-lespsg.ln \
PLOTDIR=$BUILDSPS/lib \
LIBNAME=libespsg.a \
LLIBNAME=llib-lespsg.ln \
LIBCFLAGS=" $CROSSFLAGS -O -DLINUX_OR_MAC -DLIB -DSCCS -I$BUILDSPS/include -DLINUX " \
LIBFFLAGS="-O " \
PROGFFLAGS=" " \
OLIBCFLAGS=" $CROSSFLAGS -O -DLINUX_OR_MAC -DLIB -DSCCS -I$BUILDSPS/include -DLINUX " \
LIBMOD=0644 \
LINTFILE=$BUILDSPS/lib/llib-lespsg.c \
DEFAULT_PAGER=more \
VTROFF=itroff \
MACH=LINUX \
FLOAT= \
MKLINTLIB="" \
CLKDEV="" \
ADDEV="" \
DADEV="" \
MAXAD= \
MAXDA= \
MINAD= \
MINDA= \
ADTYPE="" \
PLOTCOMMAND="esps_plot" \
MCD="" \
HMOD=0444 \
WINLIBS="-L/usr/X11R6/lib -L/usr/lib -lX11 -lpthread -lXdmcp -lXau" \
CC="gcc" \
ANSI_CC="gcc -ansi" \
ELM_CC="gcc -DANSI_C" \
SPOOL_CMD="lpr" \
RANLIB="ranlib" \
EQN=eqn \
WINDOWS="" \
XVIEW_INC="$BUILDSPS/include" \
X_LIB="-L/usr/X11R6/lib -L/usr/lib -lX11" \
X_INC="/usr/X11R6/include" \
XVIEW_LIB="$BUILDSPS/lib/libxview.a $BUILDSPS/lib/libolgx.a -lutil -L/usr/X11R6/lib -L/usr/lib -lX11 -lpthread -lXdmcp -lXau" \
XWIN="" \
EHDRLIB="libhdre.a" \
SHDRLIB="libhdrs.a" \
WHDRLIB="libhdrw.a" \
NHDRLIB="libhdrn.a" \
XVIEW_B_OPT="" \
BSDLIB="" \
LIBMV="" \
AUDIOLIB="" \
$*
